{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "alwaysStrict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "pack/js",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "lib": [
      "es2015",
      "es2015.iterable",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
